<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="res_config_settings_form_view_inherit_basic_rule" model="ir.ui.view">
        <field name="name">res.config.settings.form.view.inherit.basic_rule</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="hr_payroll.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('app_settings_block')][@data-key='hr_payroll']" position="inside">
                <h2>Remuneración mínima vital</h2>
                <div class="col-12 col-lg-6 o_setting_box">
                    <div class="o_setting_right_pane">
                        <div class="content-group">
                            <div class="mt16 row">
                                <label for="min_payment" class="col-3 col-lg-3 o_light_label"/>
                                <field name="min_payment" class="oe_inline"/>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

</odoo>
